<div id="flex-container">
  <form id="login-form" action="/auth/login" method="POST">
    <input
      type="text"
      id="username"
      name="username"
      placeholder="Username"
      required
      minlength="3"
      maxlength="20"
    />
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Password"
      required
      minlength="3"
      maxlength="100"
    />
    <button type="submit">Log In</button>
  </form>
  <hr />
  <div id="signup-container">
    <p>Don't have an account?</p>
    <a href="/auth/signup"><button id="signup-button">Sign Up</button></a>
  </div>
</div>
