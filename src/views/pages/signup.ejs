<form id="signup-form" action="/auth/signup" method="POST">
  <input
    type="text"
    id="username"
    name="username"
    placeholder="Username"
    required
    minlength="3"
    maxlength="20"
  />
  <input
    type="password"
    id="password"
    name="password"
    placeholder="Password"
    required
    minlength="3"
    maxlength="100"
  />
  <button type="submit">Create Account</button>
</form>
